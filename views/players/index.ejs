<% layout('layouts/boilerplate')%>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4">
  <% for (let player of players) { %>
    <div class="col">
        <div class="card mb-2" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= player.fullName %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= player.primaryPosition %></h6>
            <p class="card-text">Phone: <%= player.phoneNumber %>  </p>
            <p class="card-text">Email: <%= player.email %></p>
            <a href="/players/<%= player._id %>/edit" class="card-link">Edit</a>
            <a href="#" class="card-link">Stats</a>
          </div>
        </div>
      </div>
        <%} %>
      </div>